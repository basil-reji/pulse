<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-social/5.1.1/bootstrap-social.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
<link rel="stylesheet" href="/styles/dashboard.css">

<div id="back">
  <a href="/dashboard"><i class="fa fa-arrow-left"></i><span>Back</span></a>
</div>

<main class="site-wrapper">
  <div class="pt-table desktop-768">
      <div class="pt-tablecell page-home relative" style="background-image: url('/images/hero-bg.jpg');
      background-position: center;
      background-size: cover;">
      <div class="overlay"></div>
      <section id="field-test">
        <div class="container">
          <div class="disp row">
            <div class="display-card">
                <div class="disp-reading">
                  <h5>pH </h5>
                </div>
                <div class="data-show">
                    <div class="sens-status"><span id="text1">...</span></div>
                    <div class="lin"></div>
                    <div class="data-controls">
                      <label class="switch mybtn">
                      <input type="checkbox" id="checkbox1" onclick="checkBoxFun(1)">
                      <span class="slider"></span>
                      </label>
                      <button class="btn btn-success mybtn" id="pick1">Pick</button>
                    </div>
                </div>
            </div>
            <div class="display-card">
                <div class="disp-reading">
                  <h5>Soil Moisture</h5>
                </div>
                <div class="data-show">
                    <div class="sens-status"><span id="text2">...</span> %</div>
                    <div class="lin"></div>
                    <div class="data-controls">
                      <label class="switch mybtn">
                      <input type="checkbox" id="checkbox2" onclick="checkBoxFun(2)">
                      <span class="slider"></span>
                      </label>
                      <button class="btn btn-success mybtn" id="pick2">Pick</button>
                    </div>
                </div>
            </div>
            <div class="display-card">
                <div class="disp-reading">
                  <h5>Condutivity</h5>
                </div>
                <div class="data-show">
                    <div class="sens-status"><span id="text3">...</span> %</div>
                    <div class="lin"></div>
                    <div class="data-controls">
                      <label class="switch mybtn">
                      <input type="checkbox" id="checkbox3" onclick="checkBoxFun(3)">
                      <span class="slider"></span>
                      </label>
                      <button class="btn btn-success mybtn" id="pick3">Pick</button>
                    </div>
                </div>
            </div>
          </div>
          <div class="disp row">
            <div class="display-card">
                <div class="disp-reading">
                  <h5>Humidity</h5>
                </div>
                <div class="data-show">
                    <div class="sens-status"><span id="text4">...</span> %</div>
                    <div class="lin"></div>
                    <div class="data-controls">
                      <label class="switch mybtn">
                      <input type="checkbox" id="checkbox4" onclick="checkBoxFun(4)">
                      <span class="slider"></span>
                      </label>
                      <button class="btn btn-success mybtn" id="pick4">Pick</button>
                    </div>
                </div>
            </div>
            <div class="display-card">
                <div class="disp-reading">
                  <h5>Temperature</h5>
                </div>
                <div class="data-show">
                    <div class="sens-status"><span id="text5">...</span> C</div>
                    <div class="lin"></div>
                    <div class="data-controls">
                      <label class="switch mybtn">
                      <input type="checkbox" id="checkbox5" onclick="checkBoxFun(5)">
                      <span class="slider"></span>
                      </label>
                      <button class="btn btn-success mybtn" id="pick5">Pick</button>
                    </div>
                </div>
            </div>
          </div>
          <button class="btn btn-success mybtn" style="margin: 1rem;">Save</button>
          <button class="btn btn-success mybtn" style="margin: 1rem;">Get suggestions</button>
        </div>
      </section>
    </div>
  </div>
</main>

